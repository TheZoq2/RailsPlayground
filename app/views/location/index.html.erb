<h2>
    Create new location
</h2>

<%= form_for :location_controller, url: location_create_path() do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>

<h2>
    Edit existing locations
</h2>

<table>
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Edit</td>
    </tr>

    <% @locations.each do |location| %>
        <tr>
            <td>
                <%= location.name %>
            </td>
            <td>
                <%= location.description %>
            </td>
            <td>
                <%= "placeholder" %>
            </td>
        </tr>
    <% end %>
</table>
